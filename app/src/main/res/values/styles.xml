<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat">
		<!-- <item name="android:windowActionBar">true</item> -->
		<item name="android:colorBackground">@color/gray_dark</item>
		<item name="colorPrimary">@color/black</item>
		<item name="colorPrimaryDark">@color/black</item>
		<item name="colorAccent">@color/orange</item>

		<item name="colorCard">?android:attr/colorBackground</item>
		<item name="colorCardAccent">@color/orange</item>
		<item name="colorCardExpanded">@color/gray</item>
		<item name="colorCardDivider">@color/orange</item>
		<item name="colorCardDrawable">@color/white</item>
		<item name="colorCardText">@color/white</item>
		<item name="colorCardFocus">@color/white</item>
		<item name="colorCardFocusText">@color/black</item>
	</style>

	<style name="NacDayButton">
		<item name="nacWidth">@dimen/isz_icon</item>
		<item name="nacHeight">@dimen/isz_icon</item>
		<item name="nacDuration">500</item>
		<item name="nacTextColor">?attr/colorCardText</item>
		<item name="nacTextSize">@dimen/tsz_main</item>
		<item name="nacText"></item>
		<item name="nacBackgroundColor">?attr/colorCardExpanded</item>
		<item name="nacDrawable">@drawable/day_button</item>
	</style>

	<style name="NacColorPicker">
		<item name="nacSpacing">?dialogPreferredPadding</item>
	</style>

</resources>
