		<!--<item name="colorSurface">@color/black</item>-->
		<item name="colorError">@color/red</item>
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorOnSecondary">@color/black</item>
		<item name="colorOnBackground">@color/white</item>
		<item name="colorOnSurface">@color/white</item>
		<item name="colorOnError">@color/white</item>

		<item name="colorAccent">@color/orange</item>

		<item name="colorCard">@color/gray_dark</item>
		<item name="colorCardAccent">@color/orange</item>
		<item name="colorCardExpanded">@color/gray</item>
		<item name="colorCardDivider">@color/orange</item>
		<item name="colorCardDrawable">@color/white</item>
		<item name="colorCardText">@color/white</item>
		<item name="colorCardFocus">@color/white</item>
		<item name="colorCardFocusText">@color/black</item>
	</style>


	<!-- Radio button -->
	<style name="RadioGroup">
		<item name="android:layout_marginStart">@dimen/normal</item>
		<item name="android:layout_marginEnd">@dimen/normal</item>
	</style>

	<style name="RadioButton">
		<item name="android:paddingStart">@dimen/small</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>


	<!-- Custom -->
	<!--
	<style name="TextButton.Day">
		<item name="android:padding">0dp</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/day_button</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:maxLength">1</item>
		<item name="backgroundTint">?attr/colorCard</item>
	</style>
	-->

	<style name="YoButton" parent="Widget.AppCompat.Button">
		<item name="android:padding">@dimen/zero</item>
		<item name="android:insetTop">@dimen/zero</item>
		<item name="android:insetBottom">@dimen/zero</item>
		<item name="android:background">@drawable/day_button</item>
		<item name="android:gravity">center</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:maxLines">1</item>
		<item name="android:maxLength">1</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
		<item name="backgroundTint">@color/gray_light</item>
	</style>


	<!-- Text button -->
	<style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
		<item name="android:maxLines">1</item>
		<item name="android:insetTop">@dimen/zero</item>
		<item name="android:insetBottom">@dimen/zero</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
		<item name="iconPadding">@dimen/normal</item>
		<item name="iconSize">@dimen/isz_normal</item>
		<item name="iconTint">@color/white</item>
	</style>

	<style name="TextButton.Ellipsize">
		<item name="android:ellipsize">end</item>
		<item name="android:letterSpacing">0</item>
		<item name="android:maxLength">@integer/max_entry_length</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="TextButton.Ellipsize.Row">
		<item name="android:paddingTop">@dimen/tiny</item>
		<item name="android:paddingBottom">@dimen/tiny</item>
		<item name="android:paddingStart">@dimen/zero</item>
		<item name="android:paddingEnd">@dimen/small</item>
	</style>

	<style name="TextButton.Icon">
		<item name="android:padding">0dp</item>
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">0dp</item>
	</style>


	<!-- Text view -->
	<style name="TextView">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>

	<style name="TextView.Primary">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textSize">@dimen/tsz_normal</item>
	</style>

	<style name="TextView.Secondary">
		<item name="android:textColor">?android:attr/textColorSecondary</item>
		<item name="android:textSize">@dimen/tsz_small</item>
	</style>

	<style name="TextView.Summary" parent="TextView.Secondary">
		<item name="android:maxLength">@integer/max_entry_length</item>
		<item name="android:maxLines">1</item>
		<item name="android:textStyle">bold</item>
	</style>


	<!-- Custom -->
	<style name="NacDayButton">
		<item name="nacWidth">@dimen/isz_large</item>
		<item name="nacHeight">@dimen/isz_large</item>
		<item name="nacDuration">500</item>
		<item name="nacText"></item>
	</style>

	<style name="NacColorPicker">
		<item name="nacSpacing">?dialogPreferredPadding</item>
	</style>

</resources>
