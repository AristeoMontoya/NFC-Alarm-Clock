<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<!-- General -->
	<com.nfcalarmclock.NacPreferenceCategory
		android:key="@string/pref_general_key"
		android:title="@string/pref_general_title">

		<com.nfcalarmclock.NacPreferenceAutoDismiss
			android:key="@string/pref_auto_dismiss_key"
			android:title="@string/pref_auto_dismiss_title"
			android:defaultValue="7"
			/>

		<com.nfcalarmclock.NacPreferenceMaxSnooze
			android:key="@string/pref_max_snooze_key"
			android:title="@string/pref_max_snooze_title"
			android:defaultValue="11"
			/>

		<com.nfcalarmclock.NacPreferenceSnoozeDuration
			android:key="@string/pref_snooze_duration_key"
			android:title="@string/pref_snooze_duration_title"
			android:defaultValue="4"
			/>

		<com.nfcalarmclock.NacPreferenceDismissButton
			android:key="@string/pref_dismiss_button_key"
			android:title="@string/pref_dismiss_button_title"
			android:widgetLayout="@layout/nac_preference_checkbox"
			app:summaryEnabled="@string/pref_dismiss_button_summary_enabled"
			app:summaryDisabled="@string/pref_dismiss_button_summary_disabled"
			android:defaultValue="true"
			/>

		<!-- Volume level -->

	</com.nfcalarmclock.NacPreferenceCategory>

	<!-- Default Alarm -->
	<com.nfcalarmclock.NacPreferenceCategory
		android:key="@string/pref_defaults_key"
		android:title="@string/pref_defaults_title">

		<com.nfcalarmclock.NacPreferenceRepeat
			android:key="@string/pref_repeat_key"
			android:title="@string/pref_repeat_title"
			android:widgetLayout="@layout/nac_preference_checkbox"
			app:summaryEnabled="@string/pref_repeat_summary_enabled"
			app:summaryDisabled="@string/pref_repeat_summary_disabled"
			android:defaultValue="true"
			/>

		<com.nfcalarmclock.NacPreferenceVibrate
			android:key="@string/pref_vibrate_key"
			android:title="@string/pref_vibrate_title"
			android:widgetLayout="@layout/nac_preference_checkbox"
			app:summaryEnabled="@string/pref_vibrate_summary_enabled"
			app:summaryDisabled="@string/pref_vibrate_summary_disabled"
			android:defaultValue="true"
			/>

		<com.nfcalarmclock.NacPreferenceDays
			android:key="@string/pref_days_key"
			android:title="@string/pref_days_title"
			android:summary="@string/pref_days_summary"
			android:defaultValue="62"
			/>

		<com.nfcalarmclock.NacPreferenceSound
			android:key="@string/pref_sound_key"
			android:title="@string/pref_sound_title"
			android:summary="@string/pref_sound_summary"
			/>

		<com.nfcalarmclock.NacPreferenceName
			android:key="@string/pref_name_key"
			android:title="@string/pref_name_title"
			android:summary="@string/pref_name_summary"
			/>

	</com.nfcalarmclock.NacPreferenceCategory>

	<!-- Colors -->
	<com.nfcalarmclock.NacPreferenceCategory
		android:key="@string/pref_color_key"
		android:title="@string/pref_color_title">

		<com.nfcalarmclock.NacPreferenceColor
			android:key="@string/pref_theme_color_key"
			android:title="@string/pref_theme_color_title"
			android:summary="@string/pref_theme_color_summary"
			android:widgetLayout="@layout/nac_preference_color"
			android:defaultValue="0xfffb8c00"
			/>

		<com.nfcalarmclock.NacPreferenceColor
			android:key="@string/pref_name_color_key"
			android:title="@string/pref_name_color_title"
			android:summary="@string/pref_name_color_summary"
			android:widgetLayout="@layout/nac_preference_color"
			android:defaultValue="0xff00c0fb"
			/>

		<com.nfcalarmclock.NacPreferenceColor
			android:key="@string/pref_days_color_key"
			android:title="@string/pref_days_color_title"
			android:summary="@string/pref_days_color_summary"
			android:widgetLayout="@layout/nac_preference_color"
			android:defaultValue="0xfffb8c00"
			/>

		<com.nfcalarmclock.NacPreferenceColor
			android:key="@string/pref_time_color_key"
			android:title="@string/pref_time_color_title"
			android:summary="@string/pref_time_color_summary"
			android:widgetLayout="@layout/nac_preference_color"
			android:defaultValue="0xffffffff"
			/>

		<com.nfcalarmclock.NacPreferenceColor
			android:key="@string/pref_am_color_key"
			android:title="@string/pref_am_color_title"
			android:summary="@string/pref_am_color_summary"
			android:widgetLayout="@layout/nac_preference_color"
			android:defaultValue="0xffffffff"
			/>

		<com.nfcalarmclock.NacPreferenceColor
			android:key="@string/pref_pm_color_key"
			android:title="@string/pref_pm_color_title"
			android:summary="@string/pref_pm_color_summary"
			android:widgetLayout="@layout/nac_preference_color"
			android:defaultValue="0xffffffff"
			/>

	</com.nfcalarmclock.NacPreferenceCategory>

</PreferenceScreen>
