<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

	<com.nfcalarmclock.NacCheckboxPreference
		android:key="@string/pref_shuffle_playlist_key"
		android:title="@string/pref_shuffle_playlist_title"
		android:summaryOn=" @string/pref_shuffle_playlist_summary_enabled"
		android:summaryOff="@string/pref_shuffle_playlist_summary_disabled"
		android:defaultValue="false"
		/>

	<com.nfcalarmclock.NacCheckboxPreference
		android:key="@string/pref_monday_first_key"
		android:title="@string/pref_monday_first_title"
		android:summaryOn=" @string/pref_monday_first_summary_enabled"
		android:summaryOff="@string/pref_monday_first_summary_disabled"
		android:defaultValue="false"
		/>

	<com.nfcalarmclock.NacCheckboxPreference
		android:key="@string/pref_speak_to_me_key"
		android:title="@string/pref_speak_to_me_title"
		android:summaryOn=" @string/pref_speak_to_me_summary_enabled"
		android:summaryOff="@string/pref_speak_to_me_summary_disabled"
		android:defaultValue="false"
		/>

</PreferenceScreen>
