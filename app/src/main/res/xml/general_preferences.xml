<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Dismiss -->
	<com.nfcalarmclock.NacPreferenceCategory
		android:title="@string/pref_general_dismiss_category">

		<com.nfcalarmclock.NacAutoDismissPreference
			android:key="@string/pref_auto_dismiss_key"
			android:title="@string/pref_auto_dismiss_title"
			android:defaultValue="7"
			/>

	</com.nfcalarmclock.NacPreferenceCategory>

	<!-- Snooze -->
	<com.nfcalarmclock.NacPreferenceCategory
		android:title="@string/pref_general_snooze_category">

		<com.nfcalarmclock.NacMaxSnoozePreference
			android:key="@string/pref_max_snooze_key"
			android:title="@string/pref_max_snooze_title"
			android:defaultValue="11"
			/>

		<com.nfcalarmclock.NacSnoozeDurationPreference
			android:key="@string/pref_snooze_duration_key"
			android:title="@string/pref_snooze_duration_title"
			android:defaultValue="4"
			/>

		<com.nfcalarmclock.NacCheckboxPreference
			android:key="@string/pref_easy_snooze_key"
			android:title="@string/pref_easy_snooze_title"
			android:summaryOn="@string/pref_easy_snooze_summary_enabled"
			android:summaryOff="@string/pref_easy_snooze_summary_disabled"
			android:defaultValue="false"
			/>

	</com.nfcalarmclock.NacPreferenceCategory>

	<!-- Tweaks -->
	<com.nfcalarmclock.NacPreferenceCategory
		android:title="@string/pref_general_tweaks_category">

		<com.nfcalarmclock.NacNextAlarmFormatPreference
			android:key="@string/pref_next_alarm_format_key"
			android:title="@string/pref_next_alarm_format_title"
			android:defaultValue="0"
			/>

		<com.nfcalarmclock.NacStartWeekOnPreference
			android:key="@string/pref_start_week_on_key"
			android:title="@string/pref_start_week_on_title"
			android:defaultValue="0"
			/>

		<com.nfcalarmclock.NacCheckboxPreference
			android:key="@string/pref_alarm_info_key"
			android:title="@string/pref_alarm_info_title"
			android:summaryOn="@string/pref_alarm_info_summary_enabled"
			android:summaryOff="@string/pref_alarm_info_summary_disabled"
			android:defaultValue="true"
			/>

	</com.nfcalarmclock.NacPreferenceCategory>

</PreferenceScreen>
