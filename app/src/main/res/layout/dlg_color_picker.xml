<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingTop="10dp"
	android:paddingBottom="-10dp"
	android:paddingStart="?dialogPreferredPadding"
	android:paddingEnd="?dialogPreferredPadding">


	<com.nfcalarmclock.NacColorPicker
		android:id="@+id/color_picker"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="?dialogPreferredPadding"
		/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/isz_color_example"
		android:layout_marginBottom="@dimen/isz_color_example"
		android:orientation="horizontal"
		android:layout_gravity="center_horizontal">

		<ImageView
			android:id="@+id/color_example"
			android:layout_width="@dimen/isz_color_example"
			android:layout_height="@dimen/isz_color_example"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="@dimen/m_color"
			/>

		<EditText
			android:id="@+id/color_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="-5dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:inputType="text"
			android:hint="@string/dlg_color_hint"
			android:maxLines="1"
			android:maxLength="@integer/max_hex_length">
		</EditText>

	</LinearLayout>

</LinearLayout>
