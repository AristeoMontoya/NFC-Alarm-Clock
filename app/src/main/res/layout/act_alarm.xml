<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/act_alarm"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="?dialogPreferredPadding"
	android:paddingEnd="?dialogPreferredPadding"
	tools:ignore="UseCompoundDrawables">
	<!--
	android:paddingTop="@dimen/pad_tweak"
	android:paddingBottom="@dimen/pad_tweak"
	-->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/tsz_title"
			android:text="@string/act_alarm_title"
			/>

		<ImageView
			android:id="@+id/icon"
			android:layout_width="@dimen/isz_main_extra"
			android:layout_height="@dimen/isz_main_extra"
			android:layout_marginTop="@dimen/sp_section"
			android:layout_marginBottom="@dimen/sp_section"
			android:src="@mipmap/alarm"
			android:contentDescription="@null"
			/>

		<TextView
			android:id="@+id/instructions"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/tsz_support"
			android:text="@string/act_alarm_instructions"
			/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/sp_section"
			android:layout_marginBottom="@dimen/sp_section"
			android:orientation="horizontal">

			<Button
				android:id="@+id/snooze"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackground"
				android:text="@string/act_alarm_snooze"
				/>

			<Button
				android:id="@+id/dismiss"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?android:attr/selectableItemBackground"
				android:text="@string/act_alarm_dismiss"
				/>

		</LinearLayout>

	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/sp_section">

		<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/sp_main"
			android:layout_marginEnd="@dimen/sp_main"
			android:layout_centerHorizontal="true"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:singleLine="true"
			android:scrollHorizontally="true"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit ="marquee_forever"
			android:textColor="@color/white"
			android:textSize="@dimen/tsz_main"
			/>

	</RelativeLayout>

</RelativeLayout>
