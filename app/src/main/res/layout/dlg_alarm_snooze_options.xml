<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/snooze_options_scrollview"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:fillViewport="true"
	android:scrollbarFadeDuration="8000">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/small"
		android:paddingBottom="@dimen/small"
		android:paddingStart="@dimen/large"
		android:paddingEnd="@dimen/large"
		android:orientation="vertical">

		<TextView
			style="@style/Widget.TextView.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/normal"
			android:paddingBottom="@dimen/normal"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/max_snooze"
			android:textSize="@dimen/tsz_normal"
			android:textStyle="bold"
			/>

		<NumberPicker
			android:id="@+id/max_snooze_picker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/tiny"
			android:layout_marginBottom="@dimen/tiny"
			/>

		<TextView
			style="@style/Widget.TextView.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/normal"
			android:paddingBottom="@dimen/normal"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/snooze_duration"
			android:textSize="@dimen/tsz_normal"
			android:textStyle="bold"
			/>

		<NumberPicker
			android:id="@+id/snooze_duration_picker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/tiny"
			android:layout_marginBottom="@dimen/tiny"
			/>

		<TextView
			style="@style/Widget.TextView.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/normal"
			android:paddingBottom="@dimen/normal"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/easy_snooze"
			android:textSize="@dimen/tsz_normal"
			android:textStyle="bold"
			/>

		<RelativeLayout
			android:id="@+id/should_easy_snooze"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/small"
			android:paddingBottom="@dimen/small"
			android:paddingStart="@dimen/large"
			android:paddingEnd="@dimen/large"
			android:clickable="true"
			android:focusable="true"
			android:background="?android:attr/selectableItemBackground">

			<com.google.android.material.checkbox.MaterialCheckBox
				android:id="@+id/should_easy_snooze_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
				android:layout_marginEnd="@dimen/small"
				android:clickable="false"
				android:minWidth="0dp"
				android:minHeight="0dp"
				android:focusable="false"
				/>

			<TextView
				style="@style/Widget.TextView.Primary"
				android:id="@+id/should_easy_snooze_summary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toEndOf="@id/should_easy_snooze_checkbox"
				android:layout_centerVertical="true"
				android:maxLines="2"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="@string/easy_snooze_false"
				/>
		</RelativeLayout>

	</LinearLayout>
</ScrollView>