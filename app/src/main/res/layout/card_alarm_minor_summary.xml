<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarmMinorSummary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/alarmMajor"
    android:layout_marginTop="@dimen/mb_card_major_minor_spacing">
    <!-- android:background="@drawable/borderhighlight" -->

    <TextView
        android:id="@+id/nacRepeatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:textColor="?attr/colorAccent"
        android:textSize="@dimen/tsz_card_repeat"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/nacExpand"
        android:layout_width="@dimen/card_expand_size"
        android:layout_height="@dimen/card_expand_size"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:src="@mipmap/baseline_keyboard_arrow_down_white_18dp"
        />

</RelativeLayout>
