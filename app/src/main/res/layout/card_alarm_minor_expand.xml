<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmMinorExpand"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/alarmMinorSummary"
    android:layout_marginTop="@dimen/mb_card_expand"
    android:layout_marginBottom="@dimen/mb_card_expand">
    <!-- android:background="@drawable/borderhighlight" -->

    <CheckBox
        android:id="@+id/alarmRepeatCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mb_card_item_spacing"
        android:paddingLeft="@dimen/sp_card"
        android:buttonTint="@color/white"
        android:textColor="@color/white"
        android:textSize="@dimen/tsz_card"
        android:text="Repeat"
        />

    <com.nfcalarmclock.DayOfWeekButtons
        android:id="@+id/alarmRepeatDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmRepeatCheck"
        android:layout_marginBottom="@dimen/mb_card_item_spacing"
        android:gravity="center"
        />

    <RelativeLayout
        android:id="@+id/alarmSoundAndVibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmRepeatDays"
        android:layout_marginBottom="@dimen/mb_card_item_spacing">

        <com.nfcalarmclock.ImageTextButton
            android:id="@+id/alarmSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/alarmVibrateCheck"
            android:layout_marginBottom="5dp"
            app:nacDrawable="@mipmap/baseline_music_note_white_18dp"
            app:nacText="Cuckoo clock"
            />

        <CheckBox
            android:id="@+id/alarmVibrateCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:paddingLeft="@dimen/sp_card"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:textSize="@dimen/tsz_card"
            android:text="Vibrate"
            />

    </RelativeLayout>

    <com.nfcalarmclock.ImageTextButton
        android:id="@+id/alarmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmSoundAndVibrate"
        android:layout_marginBottom="@dimen/mb_card_item_half_spacing"
        app:nacDrawable="@mipmap/baseline_label_white_24dp"
        app:nacText="Good Morning!"
        />

    <View
        android:id="@+id/alarmExpandDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/alarmName"
        android:layout_marginBottom="@dimen/mb_card_item_spacing"
        android:background="?attr/colorCardDivider"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmExpandDivider"
        android:layout_marginTop="5dp">

        <com.nfcalarmclock.ImageTextButton
            android:id="@+id/alarmDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:nacDrawable="@mipmap/baseline_delete_white_24dp"
            app:nacText="Delete"
            />

        <ImageView
            android:id="@+id/alarmCollapseButton"
            android:layout_width="@dimen/card_expand_size"
            android:layout_height="@dimen/card_expand_size"
            android:layout_marginEnd="15dp"
            android:layout_alignBaseline="@id/alarmDelete"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:src="@mipmap/baseline_keyboard_arrow_up_white_18dp"
            />

    </RelativeLayout>

</RelativeLayout>
