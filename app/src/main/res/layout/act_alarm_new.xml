<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/act_alarm"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="?dialogPreferredPadding"
	android:paddingEnd="?dialogPreferredPadding"
	android:background="@color/gray_dark"
	tools:ignore="UseCompoundDrawables">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/normal"
			android:layout_marginBottom="@dimen/normal"
			android:layout_marginStart="@dimen/normal"
			android:layout_marginEnd="@dimen/normal"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:scrollHorizontally="true"
			android:singleLine="true"
			android:textColor="@color/white"
			android:textSize="@dimen/tsz_title"
			android:text="Hello this is a big alarm name"
			/>

		<RelativeLayout
			android:id="@+id/parent_click_and_slide"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			android:visibility="invisible">

			<RelativeLayout
				android:id="@+id/example_click_and_slide"
				android:layout_width="@dimen/click_and_slide"
				android:layout_height="@dimen/click_and_slide"
				android:background="@drawable/round_action_button"
				android:backgroundTint="@color/gray_light"
				android:layout_centerInParent="true"
				/>

			<RelativeLayout
				android:id="@+id/click_and_slide"
				android:layout_width="@dimen/touch"
				android:layout_height="@dimen/touch"
				android:background="@drawable/round_action_button"
				android:backgroundTint="@color/orange"
				android:layout_centerInParent="true"
				/>

			<RelativeLayout
				android:layout_width="@dimen/touch"
				android:layout_height="@dimen/touch"
				android:background="@drawable/round_action_button"
				android:backgroundTint="@color/orange"
				android:layout_centerInParent="true">

				<ImageView
					android:layout_width="@dimen/isz_normal"
					android:layout_height="@dimen/isz_normal"
					android:layout_centerInParent="true"
					android:src="@mipmap/alarm"
					/>
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/snooze_button_yo"
				android:layout_width="124dp"
				android:layout_height="64dp"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="20dp"
				android:background="@drawable/top_arc"
				android:gravity="center"
				android:visibility="gone">


				<ImageView
					android:id="@+id/snooze_icon"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_toStartOf="@id/snooze_text"
					android:layout_alignBottom="@id/snooze_text"
					android:layout_marginEnd="4dp"
					android:src="@mipmap/snooze"
					/>

				<TextView
					android:id="@+id/snooze_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:textColor="@color/white"
					android:textSize="@dimen/tsz_normal"
					android:text="Snooze"
					/>
			</RelativeLayout>

			<!--
			<RelativeLayout
				android:id="@+id/dismiss_button"
				android:layout_width="@dimen/touch"
				android:layout_height="@dimen/touch"
				android:layout_below="@id/example_click_and_slide"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="20dp"
				android:background="@drawable/round_action_button"
				android:backgroundTint="@color/red">
			</RelativeLayout>
			-->

			<!--
			<RelativeLayout
				android:id="@+id/ring_example_click_and_slide"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:background="@drawable/ring_action_button"
				android:backgroundTint="@color/red"
				android:layout_centerInParent="true"
				/>
				-->

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="84dp"
			android:layout_marginStart="@dimen/large"
			android:layout_marginEnd="@dimen/large">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/alarm_action_slider_path2"
				/>

			<RelativeLayout
				android:id="@+id/round_snooze_button"
				android:layout_width="72dp"
				android:layout_height="72dp"
				android:layout_marginStart="@dimen/tiny"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
				android:background="@drawable/round_action_button"
				android:backgroundTint="@color/gray"
				android:gravity="center_vertical">

				<ImageView
					android:id="@+id/snooze_icon2"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_centerHorizontal="true"
					android:src="@mipmap/snooze"
					/>

				<TextView
					android:id="@+id/snooze_text2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/snooze_icon2"
					android:layout_centerHorizontal="true"
					android:textColor="@color/white"
					android:textSize="@dimen/tsz_tiny"
					android:textStyle="bold"
					android:text="Snooze"
					/>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/round_dismiss_button"
				android:layout_width="72dp"
				android:layout_height="72dp"
				android:layout_marginEnd="@dimen/tiny"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:background="@drawable/round_action_button"
				android:backgroundTint="@color/orange"
				android:gravity="center_vertical">

				<ImageView
					android:id="@+id/dismiss_icon2"
					android:layout_width="28dp"
					android:layout_height="28dp"
					android:layout_centerHorizontal="true"
					android:src="@mipmap/dismiss"
					/>

				<TextView
					android:id="@+id/dismiss_text2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/dismiss_icon2"
					android:layout_centerHorizontal="true"
					android:textColor="@color/white"
					android:textSize="@dimen/tsz_tiny"
					android:textStyle="bold"
					android:text="Dismiss"
					/>

			</RelativeLayout>

		</RelativeLayout>

	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/normal"
		android:layout_marginEnd="@dimen/normal"
		android:layout_marginTop="@dimen/xlarge"
		android:layout_marginBottom="@dimen/xlarge"
		android:layout_alignParentBottom="true"
		android:gravity="center_horizontal"
		>

		<ImageView
			android:id="@+id/music_icon"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_centerVertical="true"
			android:src="@mipmap/music_note"
			/>

		<TextView
			android:id="@+id/music_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/nudge"
			android:layout_marginEnd="@dimen/nudge"
			android:layout_toEndOf="@id/music_icon"
			android:singleLine="true"
			android:ellipsize="end"
			android:textColor="@color/white"
			android:textSize="@dimen/tsz_normal"
			android:textStyle="bold"
			android:text="Hello"
			/>

		<TextView
			android:id="@+id/music_artist"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/music_title"
			android:layout_alignStart="@id/music_title"
			android:singleLine="true"
			android:ellipsize="end"
			android:textColor="@color/white"
			android:textSize="@dimen/tsz_caption"
			android:textStyle="italic"
			android:text="by Ripe"
			/>

	</RelativeLayout>

</RelativeLayout>
