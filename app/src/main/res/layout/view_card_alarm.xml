<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/view_card_alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/black"
        android:elevation="@dimen/card_alarm_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/mt_card"
            android:layout_marginBottom="@dimen/mb_card"
            android:layout_marginStart="@dimen/ml_card"
            android:layout_marginEnd="@dimen/mr_card">

            <include layout="@layout/card_alarm_major" />

            <include layout="@layout/card_alarm_minor_summary" />

            <include layout="@layout/card_alarm_minor_expand" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
