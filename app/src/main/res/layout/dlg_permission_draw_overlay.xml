<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:paddingTop="@dimen/spt_dlg"
	android:paddingBottom="@dimen/spb_dlg"
	android:paddingStart="?dialogPreferredPadding"
	android:paddingEnd="?dialogPreferredPadding"
	tools:ignore="UselessParent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="?dialogPreferredPadding"
		android:paddingBottom="?dialogPreferredPadding"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/overlay_icon"
			android:layout_width="@dimen/isz_pref_icon"
			android:layout_height="@dimen/isz_pref_icon"
			android:layout_marginEnd="@dimen/mr_dlg_permission"
			android:layout_gravity="center"
			android:tint="@color/white"
			android:src="@mipmap/display"
			/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="@dimen/tsz_title"
			android:text="@string/dlg_permission_draw_overlay"
			/>

	</LinearLayout>

</LinearLayout>
