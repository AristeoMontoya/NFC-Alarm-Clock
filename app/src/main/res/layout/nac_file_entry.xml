<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/sp_main"
	android:paddingBottom="@dimen/sp_main"
	android:paddingStart="@dimen/sp_section"
	android:paddingEnd="@dimen/sp_section"
	android:background="?android:attr/selectableItemBackground"
	android:orientation="horizontal"
	tools:ignore="RtlSymmetry">

	<ImageView
		android:id="@+id/image"
		android:layout_width="@dimen/isz_icon"
		android:layout_height="@dimen/isz_icon"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:contentDescription="@string/cd_ic_file_entry"
		android:tint="@color/white"
		/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/image"
		android:layout_toStartOf="@id/annotation"
		android:layout_centerVertical="true"
		android:paddingStart="@dimen/sp_main"
		android:paddingEnd="@dimen/sp_main"
		android:orientation="vertical">

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="@dimen/tsz_main"
			/>

		<TextView
			android:id="@+id/subtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/tsz_support"
			android:visibility="gone"
			/>
	</LinearLayout>

	<TextView
		android:id="@+id/annotation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:textSize="@dimen/tsz_support"
		/>

</RelativeLayout>
