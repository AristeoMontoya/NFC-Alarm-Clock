<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.nfcalarmclock">

	<!-- Permissions that are used -->
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.NFC" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

	<!-- Hardware restrictions (NFC is optional) -->
	<uses-feature
		android:name="android.hardware.nfc"
		android:required="false"
		/>

	<application
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		android:icon="@mipmap/ic_launcher"
		android:allowBackup="false"
		android:supportsRtl="true">

		<!-- Main activity -->
		<activity
			android:name=".NacMainActivity"
			android:label="@string/app_name"
			android:windowSoftInputMode="stateAlwaysHidden">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

		</activity>

		<!-- Alarm activity -->
		<activity
			android:name=".NacAlarmActivity"
			android:label="@string/app_alert_name">
		</activity>

		<!-- Settings activity -->
		<activity
			android:name=".NacSettingsActivity"
			android:label="Settings"
			android:parentActivityName=".NacMainActivity"
			android:windowSoftInputMode="stateAlwaysHidden">
		</activity>

		<!-- Call the alarm activity when an alarm goes off -->
		<receiver
			android:name=".NacAlarmBroadcastReceiver"
			/>

		<!-- Restore alarms on boot -->
		<receiver
			android:name=".NacBootBroadcastReceiver"
			android:enabled="true"
			android:exported="false"
			android:permission="android.permission.RECEIVE_BOOT_COMPLETED">

			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>

		</receiver>

		<!-- Execute schedule and database updates -->
		<service
			android:name=".NacService"
			android:exported="false"
			/>

	</application>

</manifest>
