<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.nfcalarmclock">

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.NFC" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

	<uses-feature
		android:name="android.hardware.nfc"
		android:required="true"
		/>

	<application
		android:allowBackup="true"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme"
		android:icon="@mipmap/ic_launcher">

		<!-- Main activity -->
		<activity
			android:name=".NacMainActivity"
			android:label="@string/app_name"
			android:windowSoftInputMode="stateAlwaysHidden">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<!-- Alarm activity -->
		<activity
			android:name=".NacAlarmActivity"
			android:label="@string/app_alert_name">
		</activity>

		<!-- Settings activity -->
		<activity
			android:name=".NacSettingsActivity"
			android:label="Settings"
			android:parentActivityName=".NacMainActivity"
			android:windowSoftInputMode="stateAlwaysHidden">
			<!-- The meta-data tag is required if you support API level 15 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".NacMainActivity"
				/>
		</activity>

		<!-- Broadcast receiver -->
		<receiver
			android:name=".NacAlarmReceiver"
			/>

	</application>

</manifest>
